{ 
  "include": ["src/*.ts"], // Include all TypeScript files in src directory
  "exclude": ["node_modules"], // Exclude node_modules directory
    "compilerOptions": {
      "target": "es5", // Target ES5 for maximum browser compatibility
      "module": "es2015", // Use ES2015 modules for browser compatibility
      "outDir": "./out", // Output directory for compiled JavaScript files
      "rootDir": "./src", // Root directory of your TypeScript source files
      "strict": true, // Enable all strict type-checking options
      "esModuleInterop": true, // Enables CommonJS/AMD/UMD modules to be compatible with ES6 modules
      "forceConsistentCasingInFileNames": true // Disallow inconsistently-cased references to the same file
    }
  }